<div class='background statsbg'></div>
<h2>Hero Stats!</h2>
<a href="/selecthero"><button class='hero-select btn btn-large waves-effect waves-light grey darken-3 white-text fxn'>Enter Game</button></a>
<table class="striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Health</th>
            <th>Attack</th>
            <th>Defence</th>
        </tr>
    </thead>

    <tbody>
        {{#each heros}}
        <tr>
            <td>{{name}}</td>
            <td>{{attack}}</td>
            <td>{{defense}}</td>
            <td>{{health}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>